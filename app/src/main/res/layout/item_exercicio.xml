<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardview_ExercicioLista"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:showIn="@layout/activity_exercicios_lista"

    app:cardCornerRadius="4dp"
    android:layout_margin="4dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="16dp">
    <TextView
        android:id="@+id/textNomeExercicioLista"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/exercicios"
        android:textSize="24sp"
        android:layout_alignParentLeft="true"
        android:layout_toStartOf="@id/editExercicioItem"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:layout_toLeftOf="@id/editExercicioItem"
        />
        <ImageButton
            android:id="@+id/editExercicioItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/deleteExercicioItem"
            android:layout_marginRight="24dp"
            android:layout_toStartOf="@id/deleteExercicioItem"
            android:layout_marginEnd="24dp"
            android:background="@drawable/ic_edit"/>
    <ImageButton
        android:id="@+id/deleteExercicioItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/ic_delete"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>