<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout_Exercicios_Timer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp"
    android:layout_margin="4dp"
    android:elevation="50dp"
    tools:showIn="@layout/activity_timer"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        >

    <TextView
        android:id="@+id/textNomeExercicioLista"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/exemplo_exercicio"
        android:textSize="20sp"
      android:layout_centerHorizontal="true"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:textStyle="bold"
        />

        <TextView
            android:id="@+id/textDescricaoExercicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/exemplo_exercicio_etapa"
            android:textSize="18sp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/textNomeExercicioLista"
            android:singleLine="true"
            android:ellipsize="marquee"
            />


    </RelativeLayout>
</RelativeLayout>