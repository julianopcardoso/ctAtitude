<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.MainActivity">


    <include
        layout="@layout/tela_inicial"
        />
    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_exercicios"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="210dp"
        app:cardCornerRadius="20dp"
        android:elevation="50dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="16dp"
                android:layout_toLeftOf="@+id/image_exercicio"
                android:fontFamily="@font/coda"
                android:text="@string/exercicios"
                android:textSize="32sp" />
            <ImageView
                android:id="@+id/image_exercicio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="16dp"
                android:src="@mipmap/exercicio_foreground"
                />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_treinos"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@id/cardview_exercicios"
        android:layout_marginTop="16dp"

        app:cardCornerRadius="20dp"
        android:elevation="50dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:fontFamily="@font/coda"
                android:text="@string/treinos"
                android:textSize="32sp"

                />
            <ImageView
                android:id="@+id/image_treinos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft ="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="16dp"
                android:src="@mipmap/treino_foreground"

                />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_timer"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@id/cardview_treinos"
        android:layout_marginTop="16dp"

        app:cardCornerRadius="20dp"
        android:elevation="50dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:fontFamily="@font/coda"
                android:text="@string/timer"
                android:textSize="32sp"

                />
            <ImageView
                android:id="@+id/image_timer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="16dp"
                android:src="@mipmap/timer_foreground"

                />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>